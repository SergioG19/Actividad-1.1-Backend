<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de facturas</title>
</head>
<body>
    <h1>Lista de facturas</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Fecha</th>
          <th>Total</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% facturas.forEach(factura => { %>
          <tr>
            <td><%= factura.id %></td>
            <td><%= factura.cliente %></td>
            <td><%= factura.fecha %></td>
            <td><%= factura.total %></td>
            <td>
              <button onclick="editarFactura('<%= factura.id %>')">Editar</button>
              <button onclick="eliminarFactura('<%= factura.id %>')">Eliminar</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
      <h2>Agregar factura</h2>
  <form id="agregarFacturaForm">
    <label for="cliente">Cliente:</label>
    <input type="text" id="cliente" name="cliente" required>
    <label for="fecha">Fecha:</label>
    <input type="date" id="fecha" name="fecha" required>
    <label for="total">Total:</label>
    <input type="number" id="total" name="total" step="0.01" required>
    <button type="submit">Agregar factura</button>
  </form>
</body>
</html>